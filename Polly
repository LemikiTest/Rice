[colors]
background = #121212      ; dunkles Schwarz
foreground = #a0c4ff      ; helles Blau
black      = #121212
blue       = #3399ff      ; kr√§ftiges Blau
brightblue = #66ccff
border     = #1e90ff

[bar/main]
width = 100%
height = 30
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = "JetBrains Mono:size=10;2"
modules-left = xwindow
modules-center =
modules-right = cpu memory date
padding = 4
border-size = 1
border-color = ${colors.border}
wm-restack = i3
override-redirect = true
monitor = *

[module/xwindow]
type = internal/xwindow
format = %title%
format-underline = ${colors.blue}
interval = 1

[module/cpu]
type = internal/cpu
interval = 2
format = CPU %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format = RAM %used%/%total% MB

[module/date]
type = internal/date
interval = 1
format = %a %b %d  %H:%M:%S
format-underline = ${colors.brightblue}
